<% if (featuredProducts.length > 0) { %>
    <div class="container mx-auto px-4 py-8">
      <h2 class="text-2xl font-bold mb-8 text-center">Featured Products</h2>
      <ul class="flex flex-wrap gap-4 justify-center">
        <% featuredProducts.forEach(product => { %>
          <li class="w-[240px] bg-white rounded-lg shadow-lg overflow-hidden">
            <% if (product.imageUrls && product.imageUrls.length > 0) { %>
              <img class="w-full h-[200px] object-cover" src="<%= product.imageUrls[0] %>" alt="<%= product.name %>">
            <% } %>
            <div class="p-4">
              <h3 class="text-xl font-bold mb-2"><%= product.name %></h3>
              <p class="text-gray-700"><%= product.category %></p>
              <p class="text-gray-700"><%= product.price %> USD</p>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  <% } else { %>
    <p class="text-center text-gray-700">No featured products found.</p>
  <% } %>
  